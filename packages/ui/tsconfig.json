{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
